{
  "cleanupPeriodDays": 5,
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(hugo:*)",
      "WebFetch(domain:github.com)",
      "WebSearch",
      "Bash(git log:*)"
    ],
    "deny": [],
    "ask": [
      "Bash(git add -A:*)",
      "Bash(git commit:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash .claude/scripts/context-monitor.sh"
  }
}
